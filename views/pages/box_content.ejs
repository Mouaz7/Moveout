<%- include("../partials/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Box Details</title>
    <link rel="stylesheet" href="/style/style.css">
</head>
<body>
    <div class="container">
        <h1 class="qr-header">Box Details</h1>
        <div class="box-details">
            <div class="details-section">
                <h3>Box Name:</h3>
                <p><%= box.box_name %></p>
            </div>

            <div class="details-section">
                <h3>Label Image Type:</h3>
                <p><%= box.label_name ? box.label_name.charAt(0).toUpperCase() + box.label_name.slice(1) : "No Label" %></p>
                <div class="label-image">
                    <img src="/style/images/<%= box.label_image %>" alt="Label Image" class="label-img">
                </div>
            </div>

            <div class="details-section">
                <h3>Content Type:</h3>
                <p><%= box.content_type.charAt(0).toUpperCase() + box.content_type.slice(1) %></p>
            </div>

            <div class="details-section">
                <h3>QR Code:</h3>
                <div class="qr-code">
                    <img src="<%= box.qr_code %>" alt="QR Code">
                </div>
            </div>
        </div>

        <!-- Optional actions can be placed here if needed -->
        <!--
        <div class="actions">
            <a href="/move/boxes/edit/<%= box.box_id %>" class="btn">Edit Box</a>
            <form action="/move/boxes/delete/<%= box.box_id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this box?')" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a href="/move/boxes" class="btn">Back to All Boxes</a>
        </div>
        -->
    </div>
</body>
</html>
